<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cui_admin"
    android:background="@color/blue">

    <TextView
        android:id="@+id/type_of_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="1000dp"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/orlega_one"
        android:text="Announcement"
        android:textAlignment="center"
        android:textColor="@color/dirtywhite"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/admin_cud_line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <View
        android:id="@+id/admin_cud_line1"
        android:layout_width="270dp"
        android:layout_height="4dp"

        android:layout_marginBottom="60dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cud_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/admin_cud_line2"
        android:layout_width="270dp"
        android:layout_height="4dp"
        android:layout_marginBottom="80dp"

        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cud_create"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bgtextentry"
        android:fontFamily="@font/orlega_one"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cud_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cud_delete"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bgtextentry"
        android:fontFamily="@font/orlega_one"
        android:text="Delete"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cud_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cud_upload"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bgtextentry"
        android:fontFamily="@font/orlega_one"
        android:text="Upload"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/admin_cud_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>