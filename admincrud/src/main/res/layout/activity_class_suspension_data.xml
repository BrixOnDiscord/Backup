<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blue">

    <TextView
        android:id="@+id/serviceAdvisoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dirtywhite"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/dateClassSuspensionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/dirtywhite"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/causeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/dirtywhite"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/othersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/dirtywhite"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/classLevelsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/dirtywhite"/>
</LinearLayout>
