<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".TOAWater_Interruption"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="152dp">

    <TextView
        android:id="@+id/water_interruption_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/racingsansone"
        android:text="Water Interruption"
        android:textColor="@color/dirtywhite"
        android:layout_marginTop="20dp"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continuebtn"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bgtextentry"
        android:text="Continue"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/popins"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="376dp"
        android:layout_height="604dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_white"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/continuebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_interruption_title"
        app:layout_constraintVertical_bias="0.422">


        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bgtextentry"
            android:hint="Enter a Date"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/allerta"/>

        <EditText
            android:id="@+id/areas_affected"
            android:layout_width="327dp"
            android:layout_height="197dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bgtextentry"
            android:hint="Enter Areas Affected"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/allerta"/>

        <EditText
            android:id="@+id/reason"
            android:layout_width="327dp"
            android:layout_height="197dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bgtextentry"
            android:hint="Enter Reason"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/allerta"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
