<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Announcement"
    android:background="@color/blue">

    <!--Appname-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_announcement"
        android:layout_width="323dp"
        android:layout_height="77dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="@color/gray"
        android:text="CREATE ANNOUNCEMENT"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/admin_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.05 " />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/admin_log_out"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/gray"
        android:text="Log Out"
        android:textSize="23dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <View
        android:id="@+id/admin_line2"
        android:layout_width="359dp"
        android:layout_height="4dp"

        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/admin_log_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.970" />

    <ImageView
        android:id="@+id/admin_logo"
        android:layout_width="324dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toTopOf="@+id/create_announcement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189"
        app:srcCompat="@drawable/admin_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>